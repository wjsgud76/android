<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="50dp"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/mark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:maxWidth="100dp"
        android:maxHeight="100dp"
        android:src="@drawable/mark"
        android:baseline="60dp"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="광운대학교 회원가입"
            android:textSize="24dp"
            android:layout_toRightOf="@id/mark"
            android:layout_alignBaseline="@id/mark"
            android:id="@+id/textView1"
            />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이디:"
        android:id="@+id/idInput"
        android:textSize="23dp"
        android:layout_below="@id/mark"
        android:layout_marginTop="20dp"
        />
    <EditText
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/idInput"
        android:layout_below="@id/mark"
        android:layout_alignLeft="@id/textView1"
        android:layout_alignBaseline="@id/idInput"
        android:id="@+id/idEdit"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호:"
        android:id="@+id/pwInput"
        android:layout_below="@id/idInput"
        android:textSize="23dp"
        android:layout_marginTop="20dp"
        />
    <EditText
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/idInput"
        android:layout_alignLeft="@id/textView1"
        android:id="@+id/pwEdit"
        android:layout_alignBaseline="@id/pwInput"
        android:inputType="textPassword"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이메일:"
        android:id="@+id/emailInput"
        android:layout_below="@id/pwInput"
        android:textSize="23dp"
        android:layout_marginTop="20dp"
        />

    <EditText
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/pwInput"
        android:layout_alignLeft="@id/textView1"
        android:layout_alignBaseline="@id/emailInput"
        android:inputType="textEmailAddress"
        android:id="@+id/emailEdit"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="전화번호:"
        android:id="@+id/phoneInput"
        android:layout_below="@id/emailInput"
        android:textSize="23dp"
        android:layout_marginTop="20dp"
        />
    <EditText
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/emailInput"
        android:layout_alignLeft="@id/textView1"
        android:layout_alignBaseline="@id/phoneInput"
        android:hint="-생략"
        android:inputType="phone"
        android:id="@+id/phoneEdit"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="제출"
        android:layout_below="@id/phoneInput"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:onClick="onSubmitClick"
        android:id="@+id/submitButton"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/thxText"
        android:layout_below="@id/submitButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textColor="#00FF00"
        />

</RelativeLayout>