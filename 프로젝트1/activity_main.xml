<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/calculator_background"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/calculator_background"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"
        android:gravity="right"
        android:layout_weight="1"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/expression"
            android:layout_marginHorizontal="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/result"
            android:layout_marginHorizontal="20dp"
            />
    </LinearLayout>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DECIMAL"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:id="@+id/buttonDecimal"
            android:onClick="onClick"
            />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HEXIMAL"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:id="@+id/buttonHeximal"
            android:onClick="onClick"
            />
    </RadioGroup>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="6"
        android:layout_margin="20dp"
        android:stretchColumns="0,1,2"
        >
        <TableRow
            android:layout_weight="1">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="("
                android:onClick="onButtonClick"
                android:id="@+id/leftParenthesis"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=")"
                android:onClick="onButtonClick"
                android:id="@+id/rightParenthesis"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="←"
                android:onClick="onButtonClick"
                android:layout_span="2"
                android:id="@+id/cancel"
                />
        </TableRow>
        <TableRow
            android:layout_weight="1">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="1"
                android:onClick="onButtonClick"
                android:id="@+id/num1"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="2"
                android:onClick="onButtonClick"
                android:id="@+id/num2"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="3"
                android:onClick="onButtonClick"
                android:id="@+id/num3"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="+"
                android:onClick="onButtonClick"
                android:id="@+id/plus"
                />
        </TableRow>
        <TableRow
            android:layout_weight="1">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="4"
                android:onClick="onButtonClick"
                android:id="@+id/num4"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="5"
                android:onClick="onButtonClick"
                android:id="@+id/num5"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="6"
                android:onClick="onButtonClick"
                android:id="@+id/num6"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="-"
                android:onClick="onButtonClick"
                android:id="@+id/minus"
                />
        </TableRow>
        <TableRow
            android:layout_weight="1">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="7"
                android:onClick="onButtonClick"
                android:id="@+id/num7"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="8"
                android:onClick="onButtonClick"
                android:id="@+id/num8"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="9"
                android:onClick="onButtonClick"
                android:id="@+id/num9"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="×"
                android:onClick="onButtonClick"
                android:id="@+id/mult"
                />
        </TableRow>
        <TableRow
            android:layout_weight="1">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="0"
                android:onClick="onButtonClick"
                android:id="@+id/num0"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="."
                android:onClick="onButtonClick"
                android:id="@+id/point"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="="
                android:onClick="onButtonClick"
                android:id="@+id/equal"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="/"
                android:onClick="onButtonClick"
                android:id="@+id/div"
                />
        </TableRow>

    </TableLayout>

</LinearLayout>